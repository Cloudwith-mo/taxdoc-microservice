{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BankStatement v2025-09-A",
  "type": "object",
  "required": ["schema_version", "document_type", "account", "statement_period", "currency", "balances", "transactions"],
  "properties": {
    "schema_version": { "type": "string", "const": "2025-09-A" },
    "document_type": { "type": "string", "enum": ["Bank Statement", "BANK_STATEMENT"] },
    "issuer": { "type": "object", "properties": { "name": { "type": "string" }, "address": { "type": "string" } } },
    "account": { "type": "object", "required": ["institution", "number"], "properties": { "institution": { "type": "string" }, "number": { "type": "string" }, "holder": { "type": "string" } } },
    "statement_period": { "type": "object", "required": ["start", "end"], "properties": { "start": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }, "end": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" } } },
    "currency": { "type": "string" },
    "balances": {
      "type": "object",
      "required": ["beginning", "ending"],
      "properties": {
        "beginning": { "type": "string", "pattern": "^\\d+\\.\\d{2}$" },
        "ending": { "type": "string", "pattern": "^\\d+\\.\\d{2}$" },
        "total_debits": { "type": "string", "pattern": "^\\d+\\.\\d{2}$" },
        "total_credits": { "type": "string", "pattern": "^\\d+\\.\\d{2}$" }
      }
    },
    "transactions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "description", "amount", "direction", "balance_after"],
        "properties": {
          "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
          "type": { "type": "string" },
          "check_no": { "type": ["string", "null"] },
          "description": { "type": "string" },
          "reference": { "type": ["string", "null"] },
          "direction": { "type": "string", "enum": ["debit", "credit"] },
          "amount": { "type": "string", "pattern": "^\\d+\\.\\d{2}$" },
          "balance_after": { "type": "string", "pattern": "^\\d+\\.\\d{2}$" }
        }
      }
    },
    "truncated": { "type": "boolean", "default": false },
    "validation": { "type": "object", "properties": { "confidence": { "type": "number" }, "errors": { "type": "array", "items": { "type": "string" } } } }
  }
}